<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlanetsListActivity"
    android:orientation="vertical">





    <SearchView
        android:id="@+id/search_value"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:iconifiedByDefault="false"
        android:background="@color/gray"
        android:queryHint="Search planets..."
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/planetsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_value"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:clickable="false"
        android:focusable="false"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_planet_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|right"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/accent"
        android:layout_marginBottom="16dp"
        app:elevation="0dp"
        android:contentDescription="@string/fab_content_desc"
        app:srcCompat="@drawable/ic_plus" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/NoPlanetsMessageContainer"
        android:layout_below="@id/search_value"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:clickable="false"
        android:focusable="false"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/planetImage"
            android:layout_margin="20dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/planet2"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noPlanetTextMessage"
            android:text="No planets to show ! "
            android:fontFamily="@font/light"
            android:textSize="16sp"
            android:textAlignment="center"

            />
    </LinearLayout>

</RelativeLayout>